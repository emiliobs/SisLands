<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SisLands.Views.TranslationPage" 
             BindingContext="{Binding Main, Source={StaticResource Locator}}"  
             Icon="ic_action_g_translate"
             Title="Translation.">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding Land}" Padding="5">
            <Label 
                FontAttributes="Bold"
                FontSize="Large" 
                HorizontalOptions="Center" 
                Text="{Binding Land.Name}"
                TextColor="Black">
            </Label>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Text="Germany:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Land.Translations.Germany}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="1" Text="Spanish:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="1" Text="{Binding Land.Translations.Spanish}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="2" Text="Brazilian:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="2" Text="{Binding Land.Translations.Brazilian}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="3" Text="Croatian:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="3" Text="{Binding Land.Translations.Croatian}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="4" Text="Dutch:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="4" Text="{Binding Land.Translations.Dutch}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="5" Text="French:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="5" Text="{Binding Land.Translations.French}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="6" Text="Italian:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="6" Text="{Binding Land.Translations.Italian}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="7" Text="Japanese:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="7" Text="{Binding Land.Translations.Japanese}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="8" Text="Persian:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="8" Text="{Binding Land.Translations.Persian}" TextColor="Black"></Label>
                <Label Grid.Column="0" Grid.Row="9" Text="Portuguese:" TextColor="Black"></Label>
                <Label Grid.Column="1" Grid.Row="9" Text="{Binding Land.Translations.Portuguese}" TextColor="Black"></Label>

</Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>